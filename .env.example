# ===== Core Supabase =====
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===== Telegram Bot =====
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
ADMIN_CHAT_ID=your_personal_telegram_chat_id

# ===== GitHub / Codex workflow =====
GITHUB_TOKEN=ghp_yourgithubtoken

# ===== AI provider =====
GEMINI_API_KEY=your_gemini_api_key

# ===== Public app URL =====
# Use your Vercel production URL or custom domain.
NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app

# ===== Optional local mock user =====
# NEXT_PUBLIC_USE_MOCK_USER=false
# MOCK_USER_DETAILS='{"id":123456,"first_name":"Mock","last_name":"User","username":"mockuser","language_code":"en"}'

# ===== Slack Codex bridge =====
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CODEX_CHANNEL_ID=C0123456789
# optional, defaults to @codex
SLACK_CODEX_MENTION=@codex

# ===== Codex bridge callback (optional automation) =====
CODEX_BRIDGE_CALLBACK_SECRET=super-secret-shared-token
VERCEL_PROJECT_NAME=v0-car-test
# e.g. -salavey13s-projects.vercel.app (or .salavey13s-projects.vercel.app)
VERCEL_PREVIEW_DOMAIN_SUFFIX=your-team-scope.vercel.app

# ===== Slack OAuth token rotation (optional alternative to SLACK_BOT_TOKEN) =====
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_REFRESH_TOKEN=xoxe-1-rotating-refresh-token
